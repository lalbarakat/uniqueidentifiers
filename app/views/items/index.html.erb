<h1>Inventory Management</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th colspan="3">Actions</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.category %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Remove', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to "Add Item", new_item_path, :method => :get %>
<%= button_to "Back", welcome_index_path, :method => :get %>
