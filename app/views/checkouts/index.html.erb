<h1>Listing checkouts</h1>

<table>
  <tr>
    <th>Student</th>
    <th>Status</th>
    <th>Startdate</th>
    <th>Enddate</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

<% @checkouts.each do |checkout| %>
  <tr>
    <td><%= checkout.student.firstname + ' ' + checkout.student.lastname unless checkout.student.blank? %></td>
    <td><%= checkout.status_text %></td>
    <td><%= checkout.student.firstname + ' ' + checkout.student.lastname unless checkout.student.blank? %></td>
    <td><%= checkout.student.firstname + ' ' + checkout.student.lastname unless checkout.student.blank? %></td>
    <td><%= link_to 'Show', checkout %></td>
    <td><%= link_to 'Edit', edit_checkout_path(checkout) %></td>
    <td><%= link_to 'Delete', checkout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

