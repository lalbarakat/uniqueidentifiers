<h1>Listing checkouts</h1>

<table>
  <tr>
    <th>Student</th>
    <th>Item</th>
    <th>Startdate</th>
    <th>Enddate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @checkouts.each do |checkout| %>
  <tr>
    <td><%= checkout.student.firstname + ' ' + checkout.student.lastname %></td>
    <td><%= checkout.item_id %></td>
    <td><%= checkout.startdate %></td>
    <td><%= checkout.enddate %></td>
    <td><%= link_to 'Show', checkout %></td>
    <td><%= link_to 'Edit', edit_checkout_path(checkout) %></td>
    <td><%= link_to 'Destroy', checkout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

