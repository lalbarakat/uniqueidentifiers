<table>
  <tr>
    <th>Equipment</th>
    <th>Student</th>
    <th>Time</th>
    <th colspan="3">Actions</th>
  </tr>

<% if @checkouts.length > 0 %>
	<% @checkouts.each do |checkout| %>
	  <% checkout.checkedout_items.each do |coi| %>
		  <tr>
		    <td><%= coi.item.name %></td>
		    <td><%= checkout.student.firstname + ' ' + checkout.student.lastname %></td>
		    <td><%= coi.enddate %></td>
		    <td><%= link_to 'Show', checkout %></td>
		    <td><%= link_to 'Edit', edit_checkout_path(checkout) %></td>
		    <td><%= link_to 'Delete', checkout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
	  <% end %>
	<% end %>
<% else %>
	<tr>
	    <td>No matching checkouts</td>
	    <td></td>
	    <td></td>
	    <td></td>
	</tr>
<% end %>
</table>
